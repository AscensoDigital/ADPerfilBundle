{% if (perfils | length) > 1 %}
    <div class="modal fade" id="ad_perfil_modalPerfil" tabindex="-1" role="dialog" aria-labelledby="ad_perfil_ModalPerfilLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="ad_perfil_ModalPerfilLabel">Elegir Perfil</h3>
                </div>
                <div class="modal-body">
                    <ul class="list-group">
                        {% for p in perfils %}
                            <li class="list-group-item"><a href="{{ path('ad_perfil_perfil_change',{'perfil_id' : p.id}) }}">{{ p.nombre }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% if app.session.get(sesionName) is null %}
        <script>window.onload=function(){$('#ad_perfil_modalPerfil').modal('show');}</script>
    {% endif %}
{% endif %}