<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="ad_perfil-headingFiltros">
        <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#ad_perfil-collapseFiltro" aria-expanded="true" aria-controls="ad_perfil-collapseFiltro">
                <span class="caret"></span> Filtros
            </a>
        </h4>
    </div>
    <div id="ad_perfil-collapseFiltro" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="ad_perfil-headingFiltros">
        {{ form_start(form) }}
        <div id="ad_perfil-filtro-body" class="panel-body">
            <div class="col-md-12 text-left"><span class="label label-info"><strong>*</strong> Filtros Obligatorios</span></div>
            {% for filtro,activo in activos %}
                <div class="col-md-4">
                    {{ form_label(form[filtro],null,{ 'label_attr' : { 'class' : 'col-md-12'} }) }}
                    {{ form_widget(form[filtro]) }}
                </div>
            {% endfor %}
            {{ form_widget(form) }}
        </div>
        <div class="panel-footer text-right">
            <button id="ad_perfil-btn-filtros" type="submit" class="btn btn-primary"> Listar</button>&nbsp;
            <button id="reset" type="button" class="btn btn-danger">Limpiar Filtros</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
